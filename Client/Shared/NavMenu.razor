<nav class="navbar navbar-expand-md navbar-dark" style="background-color: rgb(0, 26, 112)">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img src="Images/DU_Logo_Inverted.svg"/>
        </a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span aria-hidden="false"></span> <div class="nav-text">Home</div>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="">
                        <span aria-hidden="true"></span> <div class="nav-text">Our Mission</div>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="">
                        <span aria-hidden="true"></span> <div class="nav-text">Membership Benefits</div>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="">
                        <span aria-hidden="true"></span> <div class="nav-text">News</div>
                    </NavLink>
                </li>
                <li class="nav-item @NavItemCssClass">
                    <NavLink class="nav-link" href="">
                        <span aria-hidden="true"></span> 
                        <div class="join-button">Join the Union</div>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="">
                        <span aria-hidden="true"></span> 
                        <div class="join-button-inverted">Login</div>
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;
    private string? NavItemCssClass => collapseNavMenu ? "nav-item-end" : "center-item";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}