    private string ButtonOneClass { get; set; } = "inverted-join-button";

    private void MouseOverButton()
    {
        ButtonOneClass = "join-button";
    }

    private void SubmitManifestoForm()
    {

    }

    public NameEmail? Model { get; set; }

    [Parameter]
    public Action SubmitAction { get; set; }

    protected override void OnInitialized() => Model ??= new();

    private void Submit()
    {
        SubmitAction?.Invoke();
    }

    public class NameEmail
    {
        public string? Name { get; set; } = "";
        public string? Email { get; set; } = "";
    }
